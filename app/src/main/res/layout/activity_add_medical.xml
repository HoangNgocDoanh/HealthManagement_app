<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMedicalActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_medical_history"
            android:backgroundTint="#33aeb6"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Add Medical"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/symptom"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Symptom"
            android:inputType="textCapSentences"
            android:padding="10dp"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/date"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="DD/MM/YYYY"
            android:inputType="date"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/threated"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Treated"
            android:inputType="textCapSentences"
            android:padding="10dp"
            android:textSize="16sp" />


        <Button
            android:id="@+id/addConsultationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custombuttonxx"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Add Disease"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:onClick="addDisease"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>