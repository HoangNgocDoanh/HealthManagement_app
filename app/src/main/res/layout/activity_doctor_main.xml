<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DoctorMenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_bottom_roundedx">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DoctorMain_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat"
                android:text="Doctor"
                android:textColor="#FFF"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="125dp"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="myAppointments"
            android:layout_marginRight="10dp"
            android:background="@drawable/customlinearlayout"
            >
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/ic_today"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APPOINTMENT"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="125dp"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="myPatients"
            android:background="@drawable/customlinearlayout"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/ic_patient"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY PATIENTS"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="125dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/customlinearlayout"
            android:gravity="center"
            android:onClick="searchPatients"
            android:orientation="vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/ic_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="SEARCH"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="125dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/customlinearlayout"
            android:layout_marginLeft="10dp"
            android:onClick="profileInfo">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/ic_person_pin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROFILE"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="125dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:onClick="logOut"
            android:background="@drawable/customlinearlayout"
            >
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/ic_exit_to_app"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOG OUT"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16sp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>